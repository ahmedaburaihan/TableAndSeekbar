<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#423F3F">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtFirstNum"
                android:textColor="#fff"
                android:text="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtMulSign"
                android:textColor="#D3CACA"
                android:text="*"
                android:layout_toRightOf="@id/txtFirstNum"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtSecondNum"
                android:textColor="#D3CACA"
                android:text="1"
                android:layout_toRightOf="@id/txtMulSign"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtEqualSign"
                android:textColor="#D3CACA"
                android:text="="
                android:layout_toRightOf="@id/txtSecondNum"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtResult"
                android:textColor="#D3CACA"
                android:text="1"
                android:layout_toRightOf="@id/txtEqualSign"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>